<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="manifest" href="/manifest.json" crossOrigin="use-credentials">
<link rel="icon" href="<%= settings.favicon %>">
<link rel="apple-touch-icon" href="<%= settings.icon %>">
<title><%= args.title || settings.name %></title>
<meta name="author" content="<%= settings.name %>">
<script type="text/javascript">
  window.Settings = <%- JSON.stringify({ ...settings, store_id, store_object_id }) %>
  window.$context = {
    resource: <%- JSON.stringify(args.resource || '') %>,
    body: {}
  }
</script>
